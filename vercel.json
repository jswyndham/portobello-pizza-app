{
	"builds": [
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		},
		{
			"src": "server/package.json",
			"use": "@vercel/node"
		}
	],
	"rewrites": [{ "source": "/(.*)", "destination": "/" }],
	"routes": [
		{
			"src": "/(.*)",
			"dest": "/server"
		},
		{
			"src": "/(.*)",
			"dest": "/client/dist/$1"
		}
	]
}
