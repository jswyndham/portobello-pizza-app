{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
		"jest.config.ts",
		"src/types/express.d.ts",
		"tests/foodMenu.test.ts",
		"tests/auth.test.ts"
	],
	"exclude": ["node_modules"]
}
