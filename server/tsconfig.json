{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
		"jest.config.js",
		"src/types/express.d.ts"
	],
	"exclude": ["node_modules"]
}
